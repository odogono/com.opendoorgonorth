{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "jsx": "react",
      "jsxFactory": "h",
      "lib": ["es2018", "dom"],
      "module": "commonjs",
      "target": "esnext",
      "declaration": true,
      "outDir": "lib"
  },
  "include": [ "./src/**/*" ],
  "exclude":[ "node_modules", "pages" ]
}
